<% include ../partials/header%>

<div class="checkout-details">
    <main class="page payment-page">
        <section class="payment-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2 class="display-4"> Payment</h2>
                </div>
                <div id="charge-error" class="alert alert-danger <%if(noError)%> d-none">
                    <%=errMsg%>
                </div>
                <form action="/checkout" method="post" id="checkout-form">
                    
                    <div class="products">
                        <h3 class="title">Checkout</h3>
                        <div class="total">Your Total: <span class="price">Rs. <%=total%></span></div>
                    </div>
                    <div class="card-details">
                            <h3 class="title">Personal Details</h3>
                            <div class="col-sm-12 form-group">
                                        <label for="name">Name</label>
                                        <input type="text" id="name" placeholder="Name" class="form-control" required name="name">
                                </div>
                                <div class="col-sm-12 form-group">
                                        <label for="address">Address</label>
                                        <input type="text" id="address" placeholder="Address" class="form-control" required name="address">
                                </div>
                                <br>
                        <h3 class="title">Card Details</h3>
                        <div class="row">
                            <div class="form-group col-sm-7">
                                <label for="card-name">Card Holder Name</label>
                                <input id="card-name" type="text" class="form-control" placeholder="Card Holder Name" required>
                            </div>
                            <div class="form-group col-sm-5">
                                <label for="">Expiration Date</label>
                                <div class="input-group expiration-date">
                                    <input id="card-expiry-month" type="text" class="form-control" placeholder="MM" required>
                                    <span class="date-separator">/</span>
                                    <input id="card-expiry-year" type="text" class="form-control" placeholder="YY" required>
                                </div>
                            </div>
                            <div class="form-group col-sm-8">
                                <label for="card-number">Card Number</label>
                                <input id="card-number" type="text" class="form-control" placeholder="Card Number" required>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="card-cvc">CVC</label>
                                <input id="card-cvc" type="text" class="form-control" placeholder="CVC" required>
                            </div>
                            <div class="form-group col-sm-12">
                                <button type="submit" class="btn btn-primary btn-block">Buy Now</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>

</div>




<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="../../public/javascripts/checkout.js"></script>

<% include ../partials/footer%>