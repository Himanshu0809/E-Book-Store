<% include ../partials/header%>

<div class="my-cart">
    <div class="container">
        <%if(products!=null && totalPrice!=0){%>
        <div class="card">
            <div class="card-header">
                <h1>Shopping Cart</h1>
            </div>
            <div class="card-body">
                <div class="card-text">
                    <div class="shopping-cart">
                        <div class="column-labels">
                            <label class="product-image">Image</label>
                            <label class="product-details">Product</label>
                            <label class="product-price">Price</label>
                            <label class="product-quantity">Quantity</label>
                            <label class="product-removal">Remove</label>
                            <label class="product-line-price">Total</label>
                        </div>
                    </div>
                </div>
            </div>
            <ul class="list-group">
                <%products.forEach(function(product){%>
                <div class="card-body">
                    <div class="card-text">
                        <li class="list-group-item ">
                            <div class="product">
                                <div class="product-image">
                                    <img src="<%=product.item.image%>">
                                </div>
                                <div class="product-details">
                                    <div class="product-title"><%=product.item.title%></div>
                                </div>
                                <div class="product-price">Rs. <%=product.price%></div>
                                <div class="product-quantity">
                                    <input type="number" value="<%=product.qty%>" min="1">
                                </div>
                                <div class="product-removal">
                                    <div class="btn-group">
                                        <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown"
                                            type="button">Remove</button>
                                        <ul class="dropdown-menu">
                                            <li><a href="/reduce/<%=product.item._id%>">Reduce by 1</a></li>
                                            <li><a href="/remove/<%=product.item._id%>">Remove All</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="product-line-price">Rs. <%=product.price%></div>
                            </div>
                        </li>
                    </div>
                </div>
                <%})%>
            </ul>
            <div class="card-footer">
                <div class="totals">
                    <div class="totals-item totals-item-total">
                        <label>Grand Total: </label>
                        <div class="totals-value" id="cart-total">Rs. <%=totalPrice%></div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>

        <%}else{%>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <h2>Your Cart is Empty!</h2>
            </div>
        </div>
        <%}%>
    </div>
</div>
<script type="text/javascript" src="../../public/javascripts/cart.js"></script>
<% include ../partials/footer%>