<%include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="book-add-form">
            <form action="/books" method="POST">
                <fieldset class="border p-2">
                    <legend>Add a New Book</legend>

                    <div class="form-group">
                        <input class="form-control" type="text" name="book[title]" placeholder="Book Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="book[price]" placeholder="Book Price" min="0.01"
                            step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="book[image]" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="book[author]" placeholder="Book Author">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="book[publisher]" placeholder="Book Publisher">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="book[description]" placeholder="Book Description">

                        </textarea> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </fieldset>
            </form>
            <a href="/">GO BACK</a>
        </div>
    </div>
</div>

<%include ../partials/footer%>