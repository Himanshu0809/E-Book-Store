<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1>Edit <%=book.name%></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[title]" value="<%=book.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[price]" value="<%=book.price%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[image]" value="<%=book.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[author]" value="<%=book.author%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[publisher]" value="<%=book.publisher%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="book[description]">
                            <%=book.description%>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/books">GO BACK</a>
        </div>
    </div>
</div>

<%include ../partials/footer%>